{
    "preset": "psr12",
    "rules": {
        "phpdoc_summary": true,
        "phpdoc_align": true,
        "phpdoc_indent": true,
        "phpdoc_no_empty_return": true,
        "phpdoc_scalar": true,
        "phpdoc_separation": true,
        "phpdoc_trim": true,
        "phpdoc_types": true
    },
    "paths": [
        "src",
        "tests"
    ],
    "exclude": [
        "tests/Pest.php",
        "tests/TestCase.php"
    ]
}
