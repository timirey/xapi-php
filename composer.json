{
    "name": "timirey/xapi-php",
    "description": "A PHP wrapper for the X-Trade Brokers (XTB) xStation5 Trading API, supporting real-time streaming and simple commands via socket connection.",
    "keywords": [
        "php",
        "xtb",
        "xstation",
        "trading",
        "api",
        "wrapper",
        "xapi",
        "client",
        "x-trade-brokers"
    ],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Timirey\\XApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Timirey\\XApi\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Artiom Misiru",
            "email": "misiru.artiom@gmail.com",
            "role": "Certified Web Developer"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "mockery/mockery": "1.*",
        "phpstan/phpstan": "1.*",
        "pestphp/pest": "2.*",
        "slevomat/coding-standard": "8.*"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
